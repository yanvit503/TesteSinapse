@model TesteSinapse.Models.Fatura

<div class="row">
    <div class="col-md-6">

        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger">@ViewBag.Erro</div>
        }

    <form asp-action="Edit" asp-controller="Fatura" method="POST">
        <div class="form-group">
            <label class="control-label">Código</label>
            <p>@Model.Cod_Cliente</p>
            <input type="hidden" value="@Model.Num_Fatura" name="Num_Fatura" />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Cliente</label>
            <select asp-for="Cod_Cliente" class="form-control" asp-items="@ViewBag.Clientes" required></select>
        </div>
        <div class="form-group">
            <label class="control-label">Data de emissão</label>
            <input asp-for="Data_Emissao" class="form-control" type="date" required>
        </div>
        <div class="form-group">
            <label class="control-label">Data de vencimento</label>
            <input asp-for="Data_Vencimento" class="form-control" type="date" required>
        </div>
        <div class="form-group">
            <label class="control-label">Valor</label>
            <input asp-for="Valor" class="form-control" type="number" required min="0.01" step="0.01">
        </div>
        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
    </div>
</div>