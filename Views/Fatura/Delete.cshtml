@model TesteSinapse.Models.Fatura

@if (ViewBag.Erro != null)
{
    <div id="msg" class="alert alert-danger">@ViewBag.Erro</div>
}

<br>
<div id="msg" class="alert alert-danger">Tem certeza que deseja excluir esta fatura? (Essa ação não pode ser revertida)</div>
<br>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Model.Num_Fatura
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente.Nome
        </dd>
        <dt class="col-sm-2">
            Data de emissão
        </dt>
        <dd class="col-sm-10">
            @Model.Data_Emissao
        </dd>
        <dt class="col-sm-2">
            Data de vencimento
        </dt>
        <dd class="col-sm-10">
            @Model.Data_Vencimento
        </dd>
        <dt class="col-sm-2">
            Valor
        </dt>
        <dd class="col-sm-10">
            R$@Model.Valor
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Num_Fatura" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
