@model TesteSinapse.Models.Cliente

@if(ViewBag.Erro != null)
{
    <div id="msg" class="alert alert-danger">@ViewBag.Erro</div>
}

<br>
<div id="msg" class="alert alert-danger">Tem certeza que deseja excluir este cliente? (As faturas continuarão salvas)</div>
<br>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Model.Cod_Cliente
        </dd>
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Telefone
        </dt>
        <dd class="col-sm-10">
            @Model.Telefone
        </dd>
        <dt class="col-sm-2">
            Data de Cadastro
        </dt>
        <dd class="col-sm-10">
            @Model.Data_Cadastro
        </dd>
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @if(Model.Tipo_Cliente.Equals('j'))
            {
                @:Pessoa jurídica
            }
            else
            {
                @:Pessoa física
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Cod_Cliente" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>