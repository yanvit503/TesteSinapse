@model TesteSinapse.Models.Cliente

@if(ViewBag.Erro != null)
{
    <div class="alert alert-danger">@ViewBag.Erro</div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Cliente" method="POST">
            <div class="form-group">
                <label class="control-label">Código</label>
                <input type="hidden" value="@Model.Cod_Cliente" name="Cod_Cliente"/> 
            </div>
            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Telefone</label>
                <input asp-for="Telefone" class ="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Data de cadastro</label>
                <input asp-for="Data_Cadastro" class ="form-control" type="date"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Tipo</label>
                <select asp-for="Tipo_Cliente" class="form-control">
                    <option value="f">Pessoa física</option>
                    <option value="j">Pessoa jurídica</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>