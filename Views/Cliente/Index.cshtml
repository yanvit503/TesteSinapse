@model IEnumerable<TesteSinapse.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="row">
    <div class="col-sm-3">
        <p>
            <a class="btn btn-success" asp-action="Create">Novo</a>
        </p>
    </div>

    <div class="col-md-3">
        <form asp-action="Index" method="post">
            <div class="input-group">
                <input name="nome" class="form-control" placeholder="Nome" required />
                <div class="input-group-append">
                    <input type="submit" value="Encontrar" class="btn btn-info" />
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-responsive-md">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Nome
            </th>
            <th>
                Telefone
            </th>
            <th>
                Cadastro
            </th>
            <th>
                Tipo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>
                    @cliente.Cod_Cliente
                </td>
                <td>
                    @cliente.Nome
                </td>
                <td>
                    @cliente.Telefone
                </td>
                <td>
                    @cliente.Data_Cadastro.ToString()
                </td>
                <td>
                    @if (cliente.Tipo_Cliente.Equals('j'))
                    {
                        @:Pessoa jurídica
                    }
                    else
                    {
                        @:Pessoa física
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@cliente.Cod_Cliente">Alterar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@cliente.Cod_Cliente">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
